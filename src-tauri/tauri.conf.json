{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aether Media",
  "version": "1.0.2",
  "identifier": "com.kintaro.aether-media",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Aether Media",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "center": true,
        "decorations": false,
        "resizable": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost https://asset.localhost blob: data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-eval' 'unsafe-inline'; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$TEMP/**",
          "$HOME/**",
          "$DESKTOP/**",
          "$DOCUMENT/**",
          "$DOWNLOAD/**",
          "$PICTURE/**",
          "$VIDEO/**",
          "$AUDIO/**",
          "$APPDATA/**",
          "$LOCALAPPDATA/**",
          "$RESOURCE/**"
        ]
      }
    }
  },
  "bundle": {
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "sidebarImage": "icons/sidebar.bmp",
        "headerImage": "icons/header.bmp"
      }
    },
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}